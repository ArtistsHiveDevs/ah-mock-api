# ============================================================================
# NOTIFICATION SYSTEM CONFIGURATION
# ============================================================================

# Master switch - Disable all notifications globally
NOTIFICATIONS_ENABLED=true

# ============================================================================
# CHANNEL CONFIGURATION
# ============================================================================

# Email Channel
NOTIFICATIONS_EMAIL_ENABLED=true
EMAIL_FROM=noreply@artist-hive.com
EMAIL_REPLY_TO=support@artist-hive.com
AWS_REGION=us-east-1

# TEMPORAL: Enviar todos los emails a un email de prueba (mientras se verifica el dominio)
# Cambiar a false cuando el dominio esté verificado en producción
USE_TEST_EMAIL=true
TEMP_NOTIFICATION_EMAIL=admiprogramacion@gmail.com

# Push Notifications
NOTIFICATIONS_PUSH_ENABLED=true
PUSH_PROVIDER=sns  # 'sns' | 'firebase'

# SMS Notifications (expensive, disabled by default)
NOTIFICATIONS_SMS_ENABLED=false
SMS_PROVIDER=sns  # 'sns' | 'twilio'

# WebSocket (real-time updates)
NOTIFICATIONS_WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=  # Leave empty to use same port as HTTP server

# ============================================================================
# RATE LIMITING
# ============================================================================

NOTIFICATIONS_RATE_LIMIT_ENABLED=true
NOTIFICATIONS_MAX_PER_TYPE=5  # Max notifications of same type per user in window
NOTIFICATIONS_RATE_LIMIT_WINDOW=3600000  # Time window in ms (1 hour)

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

NOTIFICATIONS_QUEUE_ENABLED=true
NOTIFICATIONS_QUEUE_TYPE=memory  # 'memory' | 'sqs'
NOTIFICATIONS_QUEUE_RETRIES=3
NOTIFICATIONS_RETRY_DELAY=5000  # ms

# ============================================================================
# LOGGING
# ============================================================================

NOTIFICATIONS_LOGGING_ENABLED=true
NOTIFICATIONS_PERSIST_HISTORY=false  # Save notification history to DB
NOTIFICATIONS_LOG_LEVEL=normal  # 'minimal' | 'normal' | 'verbose'

# ============================================================================
# FRONTEND URL (for email links)
# ============================================================================

FRONTEND_URL=http://localhost:3000
